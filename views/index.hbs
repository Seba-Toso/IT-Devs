

<h1>Lista de Contactos</h1>
<h2>Backend FireBase</h2>

<div class="card-body">
            {{#if contacts }}
            <ul class="list-group">
                {{#each contacts }}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{ nombre }}
                    {{ email }} 
                    {{ mensaje }}
                </li>
                {{/each}}
            </ul>
            {{else}}
                <p>No hay contactos.</p>
            {{/if}}
        </div>